@model Models.Users


<div class="modal-header closer" style="background-color: #0471A5;">
    <h2 style=" color: #fff;">Thay đổi mật khẩu</h2>
    <button type="button" id="closbtn" style="padding-top: 0px" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="color: #fff">&times;</span></button>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label> Mật khẩu cũ:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "border: 1px solid #000; border-radius: 5px;" } })
        </div>
    </div>

    <div class="form-group">
        <label>Mật khẩu mới:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "border: 1px solid #000; border-radius: 5px;" } })
        </div>
    </div>

    <div class="form-group">
        <label>Xác nhân mật khẩu mới:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "border: 1px solid #000; border-radius: 5px;" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Đổi mật khẩu" class="btn btn-default" />
        </div>
    </div>
</div>
}

