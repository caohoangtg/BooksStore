@model Web.ViewModels.PostViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title"><strong>Tạo bài viết mới</strong></h2>
            <hr style="background-color: #0471A5" />

            @using (Html.BeginForm("NewPost", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    <div class="col-md-2">
                        <label for="Title" style="color: blue;">Tiêu đề bài viết:</label>
                    </div>
                    @*@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required = "required", @style = "border: 1px solid #000; border-radius: 5px;" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <label for="CategoryId" style="color: blue;">Chuyên mục:</label>
                    </div>
                    @*@Html.LabelFor(model => model.CategoryId, "CategoryId", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-3">
                        @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control", @style = "border: 1px solid #000; border-radius: 5px;" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <label for="TopicId" style="color: blue;">Chủ đề:</label>
                    </div>
                    @*@Html.LabelFor(model => model.TopicId, "TopicId", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-3">
                        @Html.DropDownList("TopicId", null, htmlAttributes: new { @class = "form-control", @style = "border: 1px solid #000; border-radius: 5px;" })
                        @Html.ValidationMessageFor(model => model.TopicId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label for="Description" style="color: blue;">Nội dung bài viết:</label>
                    <textarea class="ckeditor" name="Description"></textarea>
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label  style="color: blue;">Tệp đính kèm:</label>
                    <div class="col-md-10">
                        <input type="file" id="ImageFile" name="ImageFile" />
                        @*@Html.TextBoxFor(model => model.ImageFile, new {type = "file"})*@
                        @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" id="CreatePost" class="btn btn-info" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>