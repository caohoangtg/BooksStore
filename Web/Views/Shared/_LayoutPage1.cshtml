        .parallax {
            background-image: url('/Content/Images/BackgroundBook.jpg');
            min-height: 40vh;
            /*background-attachment: fixed;
            background-position: center;*/
            background-repeat: no-repeat;
            background-size: 100% 100%;
        }


        .blog_time li {
