@model Web.ViewModels.UserViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-two">
                <header>
                    <div class="avatar">
                        <a href="javascript:void(0);" onclick="$('#imageBrowsers').click()"><img id="avatar" src="~/Content/Images/avatar/@Model.Profile.ImageData" alt="Allison Walker" /></a>
                    </div>
                </header>
                <div>
                    <input type="file" id="imageBrowsers" style="display:none" />
                </div>
                <h3><strong>@Html.DisplayFor(model => model.Name)</strong></h3>
                <div class="desc" id="ChangePass">
                    @Html.DisplayFor(model => model.Email)
                </div>
                <div class="contacts">
                    <a href=""><i class="fa fa-plus"></i></a>
                    <a href=""><i class="fa fa-whatsapp"></i></a>
                    <a href=""><i class="fa fa-heart"></i></a>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="card" id="tabs">
        <ul class="nav nav-tabs profile-tab" role="tablist">
            <li class="nav-item"> <a class="nav-link active tab" data-toggle="tab" href="@Url.Action("_ProfilePartial", "Users")" role="tab">Bài viết của tôi</a> </li>
            <li class="nav-item"> <a class="nav-link tab" data-toggle="tab" href="@Url.Action("_MarksPartial", "Users")" role="tab">Bài viết đánh dấu</a> </li>
            <li class="nav-item"> <a class="nav-link tab" data-toggle="tab" href="@Url.Action("_TimelinePartial", "Users")" role="tab">Thông tin cá nhân</a> </li>
        </ul>
        <div class="showTab" style="background-color: #fff; border-radius: 5px 5px 5px 5px">
            @{
                @Html.Action("_ProfilePartial", "Users")
            }
        </div>
    </div>

</div>


